<h2>Details about <%= movie.title %></h2>

<ul id="details">
  <li>Rating: <%= movie.rating %></li>
  
  <li>Released on: <%= movie.release_date %></li>
</ul>

<%= image_tag movie.avatar.url %>

<h3>Description</h3>

<p class="description">
  <%= movie.description %>
</p>

<p> Added by: <%= author(movie) %> </p>
<p> Last sign in: <%= movie.user.last_sign_in_at %></p>
