<%= render 'checkboxes' %>
<h1>All Movies</h1>

<table id="movies">
  <thead>
    <tr>
      <th class = "<%= params[:movies_sort] == 'title' ? 'highlight' : '' %>">
        <%= link_to "Movie Title", movies_path(movies_sort: 'title', ratings: params[:ratings]) %>
      </th>
      <th>Rating</th>
      <th class = "<%= params[:movies_sort] == 'release_date' ? 'highlight' : '' %>" >
        <%= link_to "Release Date", movies_path(movies_sort: 'release_date', ratings: params[:ratings]) %>
      </th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <%= render 'movies', movies: @movies %>
  </tbody>
</table>

<%= link_to 'Add new movie', new_movie_path %>
