<h1>All Movies</h1>

<%= form_tag movies_path, :method => :get do %>
  Include:
  <% all_ratings.each do |rating| %>
    <%= rating %>
    <%= check_box_tag "ratings[#{rating}]", "1", ratings_params[rating] %>
  <% end %>
  <%= submit_tag 'Refresh' %>
<% end %>

<table id="movies">
  <thead>
    <tr>
      <th class="<%= 'highlight' if session[:sort_by] == 'title' %>">
        <%= link_to "Movie Title", movies_path(sort_by: 'title') %>
      </th>
      <th>Rating</th>
      <th class="<%= 'highlight' if session[:sort_by] == 'release_date' %>">
        <%= link_to "Release Date", movies_path(sort_by: 'release_date') %>
      </th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <%= render 'movies', movies: @movies %>
  </tbody>
</table>

<%= link_to 'Add new movie', new_movie_path %>
